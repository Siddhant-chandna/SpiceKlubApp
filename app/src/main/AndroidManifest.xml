<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shopondoor">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShopOnDoor">
        <activity android:name=".activities.OrderPlacedActivity"></activity>
        <activity android:name=".activities.CatagoryDetailActivity" />
        <activity android:name=".activities.DetailActivity" />
        <activity
            android:name=".activities.ViewAllActivity"
            android:label="@string/title_activity_view_all"
            android:theme="@style/Theme.ShopOnDoor.NoActionBar" />
        <activity android:name=".activities.LogInActivity" />
        <activity android:name=".activities.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.SignUpActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.ShopOnDoor.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>